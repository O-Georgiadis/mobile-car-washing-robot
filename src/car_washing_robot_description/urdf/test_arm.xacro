  <xacro:arm_link link_name="link_5" parent_name="link_4" xyz="0 0 0.15" rpy="0 0 0" length="0.1" radius="0.03" mass="0.3" ixx="0.001" iyy="0.001" izz="0.001"/>
  <xacro:arm_link link_name="link_6" parent_name="link_5" xyz="0 0 0.1" rpy="0 0 0" length="0.1" radius="0.03" mass="0.2" ixx="0.0008" iyy="0.0008" izz="0.0008"/>


