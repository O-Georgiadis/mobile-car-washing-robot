<!--Arm base link2-->

    <xacro:property name="arm_base_length" value="0.6" />
    <xacro:property name="arm_base_width" value="0.8" />
    <xacro:property name="arm_base_height" value="0.26" />

    <link name="arm_base_link">
        <visual>
            <geometry>
                <box size="${arm_base_length} ${arm_base_width} ${arm_base_height}" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <box size="${arm_base_length} ${arm_base_width} ${arm_base_height}" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <xacro:box_inertia m="0.5" x="${arm_base_length}" y="${arm_base_width}" z="${arm_base_height}"
                           o_xyz="0 0 0" o_rpy="0 0 0" />
    </link>


  <!-- Links and Joints -->

  <xacro:macro name="arm_link" params="link_name parent_name xyz rpy length radius mass ixx iyy izz">
    <link name="${link_name}">
      <visual>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
        </geometry>
        <origin xyz="0 0 ${length/2}" rpy="0 0 0"/>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
        </geometry>
        <origin xyz="0 0 ${length/2}" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia m="0.3" r="${radius}" l="${length}"
                                o_xyz="0 0 ${length / 2.0}" o_rpy="0 0 0" />
    </link>


    <joint name="${link_name}_joint" type="revolute">
      <parent link="${parent_name}"/>
      <child link="${link_name}"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-pi/2}" upper="${pi/2}" effort="100" velocity="100" />
      <dynamics friction="1.0" damping="5.0" />
    </joint>
  </xacro:macro>


     <!-- Z-axis Rotating Link and Joint -->

  <xacro:macro name="z_axis_arm_link" params="link_name parent_name xyz rpy length radius mass ixx iyy izz">
    <link name="${link_name}">
      <visual>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
        </geometry>
        <origin xyz="0 0 ${length/2}" rpy="0 0 0"/>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
        </geometry>
        <origin xyz="0 0 ${length/2}" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia m="0.3" r="${radius}" l="${length}"
                                o_xyz="0 0 ${length / 2.0}" o_rpy="0 0 0" />
    </link>


    <joint name="${link_name}_joint" type="revolute">
      <parent link="${parent_name}"/>
      <child link="${link_name}"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-pi/2}" upper="${pi/2}" effort="100" velocity="100" />
      <dynamics friction="1.0" damping="5.0" />
    </joint>
  </xacro:macro>

  <!-- Instantiate 6 links -->
  <xacro:z_axis_arm_link link_name="link_1" parent_name="arm_base_link" xyz="${arm_base_width/4.0} 0 0.13" rpy="0 0 0" length="0.2" radius="0.06" mass="1.0" ixx="0.005" iyy="0.005" izz="0.005"/>
  <xacro:arm_link link_name="link_2" parent_name="link_1" xyz="0 0 0.2" rpy="0 0 0" length="0.2" radius="0.05" mass="0.8" ixx="0.003" iyy="0.003" izz="0.003"/>
