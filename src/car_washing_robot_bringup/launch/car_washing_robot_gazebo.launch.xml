<launch>

    <!-- Variables for urdf_path and rviz_config_path bridge_path-->
    <let name="urdf_path" 
         value="$(find-pkg-share car_washing_robot_description)/urdf/car_washing_robot.urdf.xacro" />

    <let name="gazebo_config_path"
         value="$(find-pkg-share car_washing_robot_bringup)/config/gazebo_bridge.yaml"/>

    <let name="rviz_config_path"
        value="$(find-pkg-share car_washing_robot_description)/rviz/urdf_config.rviz"/>


    <!-- Start Robot State Publisher -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')"/>
    </node>

    <!-- Start Gazebo with a world-->
    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="$(find-pkg-share car_washing_robot_bringup)/worlds/garage_world.sdf -r"/>
        <!-- If We want to run Gazebo with empty world -->
        <!-- <arg name="gz_args" value="empty.sdf -r"/> -->
    </include>

    <!-- Spawn Robot in Gazebo -->
    <node pkg="ros_gz_sim" exec="create" 
          args="-topic robot_description -x 0.0 -y -3.0 -z 0.0"/>

    <!-- Gazebo Bridge -->
    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var gazebo_config_path)"/>
    </node>

    <!-- Start RViz2 Node -->
    <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_path) "/>


</launch>
